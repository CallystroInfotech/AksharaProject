                android:layout_height="80dp"
                android:layout_marginEnd="72dp"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/butterfly"
                android:padding="5dp"/>

            <ImageView
